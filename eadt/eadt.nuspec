    <title>Eclipse ADT</title>
    <authors>Google</authors>
    <owners>Utrecht</owners>
    <licenseUrl>http://developer.android.com/license.html</licenseUrl>
    <projectUrl>http://developer.android.com/sdk/index.html</projectUrl>
